{
  "name": "nuro",
  "version": "0.2.0",
  "description": "Lightweight, reactive, component-based UI framework",
  "main": "build/dist/nuro.js",
  "author": {
    "name": "John Egan"
  },
  "license": "MIT",
  "repository": "jegan321/nuro",
  "files": [
    "src",
    "build"
  ],
  "devDependencies": {
    "esm": "^3.2.25",
    "jest": "^25.2.6",
    "prettier": "1.19.1",
    "rollup": "^1.27.13",
    "typescript": "^4.1.3",
    "watch": "^1.0.2"
  },
  "scripts": {
    "format": "prettier --print-width 100 --no-semi false --single-quote true --write \"./**/*.ts\"",
    "compile": "tsc",
    "bundle": "rollup -c",
    "build": "npm run format && npm run compile && npm run bundle",
    "watch": "watch 'npm run compile && npm run bundle' ./src",
    "start": "npm run watch",
    "test": "npm run build && jest --coverage"
  },
  "keywords": [
    "framework", "lightweight", "components", "front-end", "web", "javascript", "html"
  ]
}
